<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd"
        <hibernate-configuration>

            <session-factory>
                <property name="connection.driver_class">org.h2.Driver</property>
                <property name="connection.url">jdbc:h2:mem:myDb;DB_CLOSE_DELAY=-1;NON_KEYWORDS,VALUE</property>
                <property name="connection.username">root</property>
                <property name="connection.password">3229746</property>
                <property name="dialect">org.hibernate.dialect.H2Dialect</property>
                <property name="hbm2ddl.auto">create</property>
                 <property name="show_sql">true</property>

                <property name="org.hibernate.SQL">debug</property>
                <property name="org.hibernate.type">trace</property>
                <property name="org.hibernate.tool.hbm2ddl">debug</property>
            </session-factory>
        </hibernate-configuration>